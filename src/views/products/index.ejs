<!DOCTYPE html>
<html>
<!-- head -->
<%- include('../partials/head') %>

    <body>
        <!-- header -->
        <%- include('../partials/partialsProducts/headerProducts') %>
            <section>
                <img src="/img/bannerTrueque.jpg" alt="Banner de ofertas" class="img-home-banner">
            </section>
            <main class="mainHome">
                <section>
                    <h3>Ofertas</h3>
                    <button class="carruselBtn"><i class="fas fa-chevron-left"></i></button>
                    <article>
                        <img src="/img/sillas.jpg" alt="Silla Gamer" class="product_img">
                        <div class="text-card-product">
                            <i class="fas fa-truck"></i>
                            <p class="price">$666.77</p>
                            <p class="discount">40% off</p>
                            <h4>Silla Gamer Ultimate Racing</h4>
                        </div>
                    </article>
                    <article>
                        <img src="/img/motos.jpg" alt="Motos" class="product_img">
                        <div class="text-card-product">
                            <i class="fas fa-truck"></i>
                            <p class="price">$666.77</p>
                            <p class="discount">40% off</p>
                            <h4>Moto Yamaha-XT-660</h4>
                        </div>
                    </article>
                    <article>
                        <img src="/img/celulares.jpg" alt="Celulares" class="product_img">
                        <div class="text-card-product">
                            <i class="fas fa-truck"></i>
                            <p class="price">$230.00</p>
                            <p class="discount">20% off</p>
                            <h4>Celular Samsung Galaxy A12</h4>
                        </div>
                    </article>
                    <article>
                        <img src="/img/neveras.jpg" alt="Neveras" class="product_img">
                        <div class="text-card-product">
                            <i class="fas fa-truck"></i>
                            <p class="price">$70.50</p>
                            <p class="discount">10% off</p>
                            <h4>Nevera Mabe 250 litros</h4>
                        </div>
                    </article>
                    <button class="carruselBtn"><i class="fas fa-chevron-right"></i></button>
                    <button class="allProducts">
                        <p>Ver todas</p>
                        <i class="fas fa-chevron-right"></i>
                    </button>
                </section>
                <section>
                    <div class="categories">
                        <label class="labelCategories" for="categories">Categorías: </label>
                        <select name="categories" id="categories" class="formCategories">
                            <option value="">Hogar</option>
                            <option value="">Electrodomesticos</option>
                            <option value="">Deportes</option>
                        </select>
                    </div>
                    <button class="carruselBtn"><i class="fas fa-chevron-left"></i></button>
                    <article>
                        <img src="/img/img-samsung-galaxy-s10.jpg" alt="Teléfono Móvil Samsung Galaxy"
                            class="product_img">
                        <div class="text-card-product">
                            <i class="fas fa-truck"></i>
                            <p class="price">$70.50</p>
                            <p class="discount">10% off</p>
                            <h4>Teléfono móvil Samsung Galaxy S10</h4>
                        </div>
                    </article>
                    <article>
                        <img src="/img/bicicletas.jpg" alt="Bicicletas" class="product_img">
                        <div class="text-card-product">
                            <i class="fas fa-truck"></i>
                            <p class="price">$666.77</p>
                            <p class="discount">40% off</p>
                            <h4>Bicicleta de montaña GW Arrow</h4>
                        </div>
                    </article>
                    <article>
                        <img src="/img/ropa.jpg" alt="Buzo" class="product_img">
                        <div class="text-card-product">
                            <i class="fas fa-truck"></i>
                            <p class="price">$270.50</p>
                            <p class="discount">10% off</p>
                            <h4>Buzo hoodie sin estampar</h4>
                        </div>
                    </article>
                    <article>
                        <img src="/img/escritorios.jpg" alt="Escritorios" class="product_img">
                        <div class="text-card-product">
                            <i class="fas fa-truck"></i>
                            <p class="price">$23.20</p>
                            <p class="discount">5% off</p>
                            <h4>Escritorio para PC Lannister</h4>
                        </div>
                    </article>
                    <button class="carruselBtn"><i class="fas fa-chevron-right"></i></button>
                    <button class="allProducts">
                        <p>Ver todas</p>
                        <i class="fas fa-chevron-right"></i>
                    </button>
                </section>

            </main>
            <!-- footer -->
            <%- include('../partials/partialsProducts/footerProducts') %>
    </body>

</html>