<!DOCTYPE html>
<html>
<!-- head -->
<%- include('../partials/head') %>

    <body>
        <!-- header -->
        <%- include('../partials/partialsProducts/headerProducts') %>


            <main class="mainCart">
                <section class="titlesCart">
                    <article>
                        <div class="imageCartTitle">
                            <h4>Imagen</h4>
                        </div>

                        <div class="noImageTitles">
                            <h4>Nombre del producto</h4>
                            <h4>Cantidad</h4>
                            <h4>Agrega o quita</h4>
                            <h4>Precio unitario</h4>
                            <h4>Precio total</h4>
                            <h4 class="lastTitle"> Quitar del carrito</h4>
                        </div>
                    </article>
                </section>

                <section class="cartArticles">

                    <article>
                        <img src="/img/img-macbook-pro-2019.jpg" alt="MacBook" class="product_img">
                        <div class="text-card-product">
                            <h4>Macbook pro 2019</h4>
                            <p class="quantityCart">20</p>
                            <p class="moreLessCart">
                                <button><i class="fas fa-plus"></i></i></button>
                                <button><i class="fas fa-minus"></i></button>
                            </p>
                            <p class="priceCart">$25</p>
                            <p class="totalPriceCart">$500</p>
                            <p class="cancelProductCart">
                                <button><i class="fas fa-times-circle"></i></button>
                            </p>
                        </div>
                    </article>
                    <article>
                        <img src="/img/img-samsung-galaxy-s10.jpg" alt="Teléfono Móvil Samsung Galaxy"
                            class="product_img">
                        <div class="text-card-product">
                            <h4>Samsung galaxy s10</h4>
                            <p class="quantityCart">20</p>
                            <p class="moreLessCart">
                                <button><i class="fas fa-plus"></i></i></button>
                                <button><i class="fas fa-minus"></i></button>
                            </p>
                            <p class="priceCart">$25</p>
                            <p class="totalPriceCart">$500</p>
                            <p class="cancelProductCart">
                                <button><i class="fas fa-times-circle"></i></button>
                            </p>
                        </div>
                    </article>

                </section>

                <section class="buyCancelButtonsCart">
                    <button class="cancelCart" name="cancelCart">Cancelar</button>
                    <button class="checkoutCart" name="checkoutCart">Comprar</button>
                </section>

            </main>
            <!-- footer -->
            <%- include('../partials/partialsProducts/footerProducts') %>
    </body>

</html>