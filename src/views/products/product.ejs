<!DOCTYPE html>
<html>
<!-- head -->
<%- include('../partials/head') %>

    <body>
        <!-- header -->
        <%- include('../partials/partialsProducts/headerProducts') %>

            <main class="mainProduct">
                <h1><%= product.productName %></h1>
                <section class="content">
                    <section class="imagesList">
                        <% product.images.forEach(image => { %>
                            <img src="/img/imgProducts/<%= image.path %>" alt="Imagen" class="product_img">
                        <% }) %>
                    </section>

                    <section class="medSection">
                        <img src="/img/imgProducts/<%= product.images[0].path %>" alt="<%= product.productName %>">
                        <div class="buttonOptions">
                            <button class="addToCartButton" name="addToCartButton">Añadir al carrito</button>
                            <button class="offerExchangeButton" name="offerExchangeButton">Ofrecer cambio</button>
                        </div>
                    </section>

                    <section class="detailsProduct">
                        <article class="contentProduct">
                            <div class="supDetail">
                                <h3>Precio</h3>
                                <h4 class="priceProduct"> <%= product.productPrice %></h4>
                            </div>
                        </article>
                        
                        <article class="contentDescription">
                            <div class="supDetail">
                                <h3>Descripción</h3>
                                <i class="fas fa-chevron-down"></i>
                            </div>
                            <p>
                                <%= product.productDescriptionUpload %>
                            </p>
                        </article>

                        <article class="contentPolitic">
                            <div class="supDetail">
